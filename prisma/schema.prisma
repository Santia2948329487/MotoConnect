generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  ADMIN
  USER
}

model User {
  id        String   @id @default(cuid())
  clerkId   String   @unique
  name      String
  email     String   @unique
  role      Role     @default(USER)
  createdAt DateTime @default(now())

  communities Community[] @relation("UserCommunities")
  posts       Post[]
  comments    Comment[]
  routes      Route[]
  workshops   Workshop[]

  routeReviews    RouteReview[]
  routeComments   RouteComment[] // ✅ AGREGAR ESTA LÍNEA
  workshopReviews WorkshopReview[]

}

model Community {
  id          String   @id @default(cuid())
  name        String
  description String?
  image       String?
  creatorId   String
  createdAt   DateTime @default(now())

  members CommunityMember[]
  creator User   @relation("UserCommunities", fields: [creatorId], references: [id])
  posts   Post[]
}

model CommunityMember {
  id           String   @id @default(cuid())
  userId       String
  communityId  String
  joinedAt     DateTime @default(now())

  community Community @relation(fields: [communityId], references: [id], onDelete: Cascade)

  @@unique([userId, communityId]) // evita doble unión
}

model Post {
  id          String   @id @default(cuid())
  title       String
  content     String?
  image       String?
  communityId String
  authorId    String
  createdAt   DateTime @default(now())

  community Community @relation(fields: [communityId], references: [id])
  author    User      @relation(fields: [authorId], references: [id])
  comments  Comment[]
}

model Comment {
  id        String   @id @default(cuid())
  content   String
  postId    String
  authorId  String
  createdAt DateTime @default(now())

  post   Post @relation(fields: [postId], references: [id])
  author User @relation(fields: [authorId], references: [id])
}

// ✅ AGREGAR ESTE NUEVO MODELO
model RouteComment {
  id        String   @id @default(cuid())
  content   String
  routeId   String
  authorId  String
  createdAt DateTime @default(now())

  route  Route @relation(fields: [routeId], references: [id], onDelete: Cascade)
  author User  @relation(fields: [authorId], references: [id])

  @@index([routeId])
  @@index([authorId])
}


model Route {
  id          String   @id @default(cuid())
  name        String
  description String?
  distanceKm  Float?
  difficulty  String? // fácil, media, difícil
  startPoint  String?
  endPoint    String?
  mapUrl      String? // enlace a Google Maps
  image       String?
  createdAt   DateTime @default(now())

  creatorId String
  creator   User   @relation(fields: [creatorId], references: [id])

  reviews RouteReview[]
  remarks RouteComment[]
}

model Workshop {
  id          String   @id @default(cuid())
  name        String
  description String?
  address     String?
  phone       String?
  services    String? // ej: "mecánica general, pintura, eléctricos"
  image       String?
  latitude    Float?
  longitude   Float?
  createdAt   DateTime @default(now())

  creatorId String
  creator   User   @relation(fields: [creatorId], references: [id])

  reviews WorkshopReview[]
}

model RouteReview {
  id        String   @id @default(cuid())
  rating    Int // 1-5
  comment   String?
  routeId   String
  userId    String
  createdAt DateTime @default(now())

  route Route @relation(fields: [routeId], references: [id])
  user  User  @relation(fields: [userId], references: [id])
}

model WorkshopReview {
  id         String   @id @default(cuid())
  rating     Int
  comment    String?
  workshopId String
  userId     String
  createdAt  DateTime @default(now())

  workshop Workshop @relation(fields: [workshopId], references: [id])
  user     User     @relation(fields: [userId], references: [id])
}
