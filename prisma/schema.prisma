// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String       @id @default(cuid())
  name        String
  email       String       @unique
  createdAt   DateTime     @default(now())
  
  // ðŸ‘‡ RelaciÃ³n inversa: un usuario puede tener muchas comunidades
  communities Community[]  @relation("UserCommunities")
}

model Community {
  id          String   @id @default(cuid())
  name        String
  description String?
  creatorId   String
  createdAt   DateTime @default(now())

  // ðŸ‘‡ RelaciÃ³n directa: una comunidad tiene un creador (User)
  creator     User     @relation("UserCommunities", fields: [creatorId], references: [id])
}
